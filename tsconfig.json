{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./dist/",
    "sourceMap": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@common/*": ["./src/common/*"],
      "@api/*": ["./src/api/*"],
      "@ui/*": ["./src/components/ui/*"],
      "@views/*": ["./src/components/views/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@models/*": ["./src/models/*"],
      "@router/*": ["./src/router/*"]
    }
  },
  "include": ["src", "index.d.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts", "cypress/*"]
}
